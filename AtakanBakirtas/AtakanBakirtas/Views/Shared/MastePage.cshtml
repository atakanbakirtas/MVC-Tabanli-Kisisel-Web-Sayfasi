@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Sayfam</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh;
            background-color: #f5f5f5;
        }

        .navbar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 70px;
            background: rgba(255, 255, 255, 0); /* Tamamen şeffaf */
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
            transition: width 0.3s ease;
            overflow: hidden;
        }


            .navbar:hover {
                width: 220px;
                background: rgba(189, 195, 199, 0.8); /* Hafif gri, hover ile belirginleşir */
            }
            .navbar img {
                width: 50px;
                border-radius: 50%;
                margin-bottom: 15px;
                transition: 0.3s ease;
            }

            .navbar:hover img {
                width: 70px;
            }
            .navbar a {
                display: flex;
                align-items: center;
                width: 100%;
                color: #2c3e50; /* Koyu gri tonlarında yazı */
                text-decoration: none;
                padding: 12px;
                font-weight: 600;
                transition: background 0.3s ease, color 0.3s ease;
                white-space: nowrap;
            }

            .navbar:hover a {
                justify-content: flex-start;
                padding-left: 20px;
            }

            .navbar a i {
                width: 35px;
                text-align: center;
                font-size: 22px;
                margin-right: 10px;
                color: #34495e;
            }
            .navbar a span {
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .navbar a:hover {
                background: rgba(44, 62, 80, 0.1); /* Hafif koyulaşma efekti */
                color: #2c3e50;
            }
            .navbar:hover a span {
                opacity: 1;
            }


        .content {
            margin-left: 80px;
            padding: 20px;
            flex-grow: 1;
        }

    </style>
</head>
<body>
    <div class="navbar">
        <img src="~/Resimler/atakanpp.jpg" alt="Profile Photo">

        <a href="/Hom/Index/">
            <i class="fas fa-home"></i> Ana Sayfa
        </a>
        <a href="/Blog/Index/">
            <i class="fas fa-blog"></i> Blog
        </a>

        
        <a href="/Contact/Index/">
            <i class="fas fa-envelope"></i> İletişim
        </a>
        <div class="social-links">

            <a href="https://github.com/atakanbakirtas" target="_blank"><i class="fab fa-github"></i>GitHub</a>
            <a href="https://www.linkedin.com/in/atakan-bak%C4%B1rta%C5%9F-674332254/" target="_blank"><i class="fab fa-linkedin"></i>LinkedIn</a>
        </div>
    </div>
    <div class="content">
       
        @RenderBody()
    </div>
</body>
</html>