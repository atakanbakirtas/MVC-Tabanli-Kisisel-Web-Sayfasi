@using EntityLayer
@model User
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
 
    .mainsection {
        display: flex;
        height: 100vh;
        margin: 0;
        background: url('/Resimler/3094352.jpg') no-repeat center center fixed;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        justify-content: center; 
        align-items: center; 
    }

    
    .login-card {
        opacity: 0;
        transform: translateY(-50px);
        animation: fadeIn 0.8s ease-out forwards;
        background-color: rgba(0, 0, 0, 0.6); 
        color: white; 
        border-radius: 10px;
        width: 400px; 
    }

   
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

   
    .form-control {
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            transform: scale(1.05);
            box-shadow: 0px 0px 10px rgba(0, 123, 255, 0.5);
        }

   
    .btn-primary {
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            transform: scale(1.1);
            box-shadow: 0px 4px 15px rgba(0, 123, 255, 0.5);
        }

   
    .card {
        padding: 30px;
    }
</style>

<section class="mainsection">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 login-card" style="width: 400px;">
            <h3 class="text-center mb-4">Giriş Yap</h3>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Message</div>
            }

            @using (Html.BeginForm("UserLogin", "User", FormMethod.Post, new { @class = "needs-validation"}))
            {
                <div class="mb-3">
                    <label for="Email" class="form-label">Kullanıcı Adı</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    <div class="invalid-feedback">Lütfen kullanıcı adınızı girin.</div>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Şifre</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <div class="invalid-feedback">Lütfen şifrenizi girin.</div>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Message</div>
                    }
                </div>
                
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            }

            <div class="text-center mt-3">
                <a href="#" class="text-decoration-none text-light">Şifremi Unuttum</a>
            </div>
        </div>
    </div>
</section>

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();

</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>